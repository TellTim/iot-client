<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="H4" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/tablet_black</item>
    </style>

    <style name="H4.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="H5" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/tablet_black</item>
    </style>

    <style name="H5.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Body14" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/tablet_black</item>
    </style>

    <style name="Body14.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Body14.Grey">
        <item name="android:textColor">@color/tablet_grey</item>
    </style>
</resources>
